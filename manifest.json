{   
	"name": "TagProReplays",
  	"description": "Save Replays from within TagPro Games",
  	"version": "0.0.4",
	"manifest_version": 2,
	"background" : {
    		"scripts": ["background.js"],
    		"persistent":true
	},
	"permissions": [
    		"tabs",
    		"storage",
    		"unlimitedStorage"
	],
	"content_scripts": [
    	{
      		"matches": ["http://*.koalabeast.com/*"],
      		"js": ["jquery.js","TagProReplays.js"],
      		"run_at": "document_end"
    	}
	],
	"web_accessible_resources": [
    		"replayRecording.js"
  	]
}
