{   
	"name": "TagProReplays",
  	"description": "Save Replays from within TagPro Games",
  	"version": "0.2.5",
	"manifest_version": 2,
		"background" : {
    "scripts": ["background.js",
             "map_draw_functions.js",
			 "createFileSystem.js",
             "whammy.js",
             "jquery.js"
             ],
    "persistent":true
},
"permissions": [
    "storage",
    "unlimitedStorage"
],
"content_scripts": [
    {
      "matches": ["http://*.koalabeast.com/*"],
      "js": ["jquery.js",
        	 "map_draw_functions.js",
             "TagProReplays.js",
             "in-page-preview.js",
             "loadTextures.js",
             "recordKeyFunctions.js"],
      "run_at": "document_end"
    }
],
"web_accessible_resources": [
    "replayRecording.js",
    "tiles.png",
    "portal.png",
    "speedpad.png",
    "speedpadred.png",
    "speedpadblue.png",
    "tagpro.png",
    "rollingbomb.png",
    "splats.png",
    "flair.png"
  ]
}
